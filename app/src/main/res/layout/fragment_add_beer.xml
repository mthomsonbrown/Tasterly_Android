<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_beer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_0"
    android:clickable="true">

    <Button
        android:id="@+id/test_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_beer"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/test_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_beer"
        android:layout_below="@+id/test_button1"
        android:layout_alignEnd="@+id/test_button1"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="88dp" />

    <SeekBar
        android:id="@+id/addBeerSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:visibility="gone"/>

</RelativeLayout>
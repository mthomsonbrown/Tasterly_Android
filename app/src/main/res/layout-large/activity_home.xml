<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary_2_1">

    <fragment
        android:id="@+id/fragment_container"
        android:name="com.slashandhyphen.tasterly.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:pLayout="@pLayout/fragment_home">

        <!-- Preview: pLayout=@pLayout/fragment_home -->
    </fragment>

    <!-- Leaving this ListView in to avoid errors in Activity code.
            take it out when i've moved ws fetches to another activity... -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tasks_list_view"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/viewBeerButton"
            android:text="Beers on Tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/addBeerButton"
            android:text="@string/add_beer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


</LinearLayout>